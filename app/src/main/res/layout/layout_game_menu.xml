<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="210dp">

    <LinearLayout
        android:id="@+id/top_menu_container"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/top_left_button"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:cardElevation="7dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@color/orange">
            <TextView
                android:id="@+id/layout_menu_game_start_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_game"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/top_right_button"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:cardElevation="7dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/orange">
            <TextView
                android:id="@+id/layout_menu_game_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_menu_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_menu_container">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottom_left_button"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:cardElevation="7dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/orange">
            <TextView
                android:id="@+id/layout_menu_game_multiplayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/multy_player"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottom_right_button"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:cardElevation="7dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/orange">
            <TextView
                android:id="@+id/layout_menu_game_quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quit"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>